<%- include("partials/_header") -%>

<body>

  <!-- Navigation -->
  <%- include("partials/_navigation") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <span class="meta">Posted by
              <a href="#">Oğuz ÖZŞEN</a>
              <%=post.dateCreated.toDateString() %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <a href="/post/edit/<%= post._id %>"  class="btn btn-success mb-3" style="border-radius: 5rem;" type="button">Güncelle</a>
          <a href="/post/<%= post._id %>?_method=DELETE" onclick="return confirm('Gönderiyi silmek istediğinizden emin misiniz?')" class="btn btn-danger mb-3" style="border-radius: 5rem;" type="button">Sil</a>
          <p><%= post.description %></p>
          <a href="#">
            <img class="img-fluid" src="/img/post-sample-image.jpg" alt="">
          </a>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include("partials/_footer") -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
